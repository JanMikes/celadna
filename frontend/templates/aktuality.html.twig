{% extends 'base.html.twig' %}

{% block title %}Aktuality{% endblock %}

{% block content %}
    {{ include('_breadcrumb.html.twig', {
        'items': [],
        'current': block('title'),
    }) }}

    <section class="aktuality-section">
        <h2>Aktuality</h2>

        {% for aktualita in aktuality %}
            <article>
                {% if aktualita.Obrazek %}
                    <img src="{{ aktualita.Obrazek }}" alt="" aria-labelledby="aktualita-{{ aktualita.id }}">
                {% endif %}

                <div class="actuality-content">
                    <h3 id="aktualita-{{ aktualita.id }}">
                        <a href="{{ path('detail_aktuality', {'id': aktualita.id}) }}">
                            {{ aktualita.Nadpis }}
                        </a>
                    </h3>

                    <p><time>{{ aktualita.DatumZverejneni|date('d.m.Y') }}</time></p>

                    {% if aktualita.Tagy %}
                        <p class="tags">
                            {% for Tag in aktualita.Tagy %}
                                {#  <a href="{{ Kategorie.name }}" class="tag-link">{{ Kategorie.value }}</a> #}
                                <span class="tag-link">{{ Tag }}</span>
                            {% endfor %}
                        </p>
                    {% endif %}

                    {{ aktualita.Popis|u.truncate(150, '...', true)|markdown_to_html }}
                </div>
            </article>
        {% endfor %}
    </section>
{% endblock %}

