<article class="person-detail">
    <div class="photo default-{{ clovek.muz ? 'muz' : 'zena' }}">
        {% if clovek.Fotka %}
            <img src="{{ clovek.Fotka }}" alt="Fotografie {{ clovek.Jmeno }}">
        {% endif %}
    </div>

    <div>
        <h4>{{ clovek.Jmeno }}</h4>
        <strong>{{ clovek.Funkce }}</strong><br>

        {% if full_udaje %}
            {% if clovek.Email %}
                <a href="mailto:{{ clovek.Email }}">{{ clovek.Email }}</a><br>
            {% endif %}

            {{ clovek.Telefon }}
        {% endif %}
    </div>
</article>
